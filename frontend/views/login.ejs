<div class="container-fluid-logo">
    <div id="userinfo-container-logo">
        <img id="user-image-logo" src="img/blue_logo.png">
    </div>
    <div id="role-container">
        <div class="btn-group-vertical center">
            <button id="btnGroupRoleResident" type="button"
                class="btn btn-lg btn-block" data-toggle="modal"
                data-target="#roleResidentModal">I'm a Resident</button>
        </div>
        <div class="btn-group-vertical center">
            <button id="btnGroupRoleStaff" type="button"
                class="btn btn-lg btn-block" data-toggle="modal"
                data-target="#roleStaffModal">I'm a Staff</button>
        </div>
    </div>
    <div class="modal fade" id="roleResidentModal" tabindex="-1" role="dialog" aria-labelledby="roleResidentModalTitle" aria-hidden="true">
        <div class="modal-dialog" role="document" style="width:85%">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="roleResidentModalTitle">Choose Your Resident Account:</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="btn-group-vertical center">
                        <button type="button" class="btn btn-secondary btn-lg" onclick="loginAsResident('Ashley')">Ashley</button>
                        <button type="button" class="btn btn-secondary btn-lg" onclick="loginAsResident('Boe')">Boe</button>
                        <button type="button" class="btn btn-secondary btn-lg" onclick="loginAsResident('Carey')">Carey</button>
                        <button type="button" class="btn btn-secondary btn-lg" onclick="loginAsResident('Dakota')">Dakota</button>
                        <button type="button" class="btn btn-secondary btn-lg" onclick="loginAsResident('Ellis')">Ellis</button>
                        <button type="button" class="btn btn-secondary btn-lg" onclick="loginAsResident('Flynn')">Flynn</button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="roleStaffModal" tabindex="-1" role="dialog" aria-labelledby="roleStaffModalTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="roleStaffModalTitle">Choose Your Staff Account:</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="btn-group-vertical center">
                        <button type="button" class="btn btn-secondary btn-lg" onclick="loginAsStaff('Kelly')">Kelly</button>
                        <button type="button" class="btn btn-secondary btn-lg" onclick="loginAsStaff('Jelly')">Jelly</button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
